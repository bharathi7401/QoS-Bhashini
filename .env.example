# Bhashini QoS Monitoring Stack Environment Configuration
# Copy this file to .env and update the values as needed

# InfluxDB Configuration
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=your_secure_admin_password
INFLUXDB_ORG=bhashini
INFLUXDB_BUCKET=qos_metrics
INFLUXDB_ADMIN_TOKEN=your_admin_token_here

# Data Simulator Token (will be generated by init script)
INFLUXDB_SIMULATOR_TOKEN=your_simulator_token_here

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Grafana Token (will be generated by init script)
INFLUXDB_GRAFANA_TOKEN=your_grafana_token_here

# Data Simulator Configuration
SIMULATION_INTERVAL=10
LOG_LEVEL=INFO

# Verification Script Token (will be generated by init script)
INFLUXDB_VERIFICATION_TOKEN=your_verification_token_here

# Multi-Tenant Authentication Configuration
GRAFANA_API_KEY_ENABLED=true
GRAFANA_USERS_AUTO_ASSIGN_ORG=true
GRAFANA_USERS_AUTO_ASSIGN_ORG_ROLE=Viewer
GRAFANA_USERS_ALLOW_SIGN_UP=true
GRAFANA_USERS_VERIFY_EMAIL_ENABLED=false
GRAFANA_DEFAULT_ORG_NAME=Bhashini
GRAFANA_DISABLE_GRAVATAR=true

# Organization Management
GRAFANA_PROVIDER_ORG_NAME=Bhashini-Provider
GRAFANA_CUSTOMER_ORG_PREFIX=Customer

# Customer Organization Tokens (will be generated by init script)
INFLUXDB_CUSTOMER_1_TOKEN=your_customer_1_token_here
INFLUXDB_CUSTOMER_2_TOKEN=your_customer_2_token_here
INFLUXDB_CUSTOMER_3_TOKEN=your_customer_3_token_here

# Provider Cross-Tenant Access Token
INFLUXDB_PROVIDER_CROSS_TENANT_TOKEN=your_provider_cross_tenant_token_here

# Authentication Provider Configuration (for future OAuth/LDAP)
GRAFANA_AUTH_PROVIDER=basic
GRAFANA_OAUTH_ENABLED=false
GRAFANA_LDAP_ENABLED=false

# Security Settings
GRAFANA_SESSION_TIMEOUT=86400
GRAFANA_CSRF_PROTECTION=true
GRAFANA_ALLOW_EMBEDDING=false
