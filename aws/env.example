# AWS Deployment Configuration
# Copy this file to .env and update the values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# ECS Configuration
ECS_CLUSTER_NAME=bhashini-qos-cluster
ECS_SERVICE_DESIRED_COUNT=1
ECS_TASK_CPU=512
ECS_TASK_MEMORY=1024

# InfluxDB Configuration
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin123
INFLUXDB_ADMIN_TOKEN=admin-token-123
INFLUXDB_ORG=bhashini
INFLUXDB_BUCKET=qos_metrics

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_DEFAULT_ORG_NAME=Bhashini

# Data Simulator Configuration
SIMULATION_INTERVAL=10
LOG_LEVEL=INFO

# VPC Configuration
VPC_CIDR=10.0.0.0/16
PUBLIC_SUBNET_1=10.0.1.0/24
PUBLIC_SUBNET_2=10.0.2.0/24
PRIVATE_SUBNET_1=10.0.10.0/24
PRIVATE_SUBNET_2=10.0.11.0/24

# Availability Zones
AZ_1=us-east-1a
AZ_2=us-east-1b

# Cost Optimization
USE_SPOT_INSTANCES=false
ENABLE_AUTO_SCALING=false
CLOUDWATCH_LOG_RETENTION_DAYS=7
