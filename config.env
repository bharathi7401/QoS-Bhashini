# Bhashini QoS Monitoring System Environment Configuration

# InfluxDB Configuration
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=admin123
DOCKER_INFLUXDB_INIT_ORG=bhashini
DOCKER_INFLUXDB_INIT_BUCKET=qos_metrics
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=admin-token-123

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin123

# Data Simulator Configuration
SIMULATION_INTERVAL=10
LOG_LEVEL=INFO

# InfluxDB Connection (for scripts)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_ORG=bhashini
INFLUXDB_BUCKET=qos_metrics
INFLUXDB_TOKEN=admin-token-123
INFLUXDB_GRAFANA_TOKEN=admin-token-123
INFLUXDB_PROVIDER_CROSS_TENANT_TOKEN=admin-token-123

# Grafana Connection (for scripts)
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Tenant-specific tokens (will be generated)
INFLUXDB_ENTERPRISE_1_TOKEN=enterprise_1_token_placeholder
INFLUXDB_STARTUP_2_TOKEN=startup_2_token_placeholder
INFLUXDB_FREEMIUM_1_TOKEN=freemium_1_token_placeholder

# Alerting/Notifications
GRAFANA_UNIFIED_ALERTING_ENABLED=true
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=replace_me
SMTP_FROM_ADDRESS=alerts@example.com
SMTP_FROM_NAME=Bhashini Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
SLACK_CHANNEL_PROVIDER=#bhashini-alerts
SLACK_CHANNEL_CUSTOMERS=#customer-alerts
PROVIDER_EMAIL_LIST=ops@example.com

# Business Intelligence System Configuration
# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bhashini_profiling
POSTGRES_USER=bhashini_user
POSTGRES_PASSWORD=bhashini_password

# BI API Configuration
BI_API_HOST=localhost
BI_API_PORT=8001
BI_API_SECRET_KEY=your-secret-key-change-in-production
BI_API_DEBUG=false

# Feature Toggles
ENABLE_VALUE_ESTIMATION=true
ENABLE_RECOMMENDATIONS=true
ENABLE_SECTOR_DASHBOARDS=true

# AI/ML Configuration
ML_MODEL_PATH=/app/models
RECOMMENDATION_ENGINE_TYPE=isolation_forest
VALUE_CALCULATION_METHOD=ai_powered

# Notification Settings
RECOMMENDATION_EMAIL_ENABLED=true
RECOMMENDATION_SLACK_WEBHOOK=https://hooks.slack.com/services/XXX/YYY/ZZZ

# Data Processing Configuration
PROFILE_DATA_RETENTION_DAYS=1095
VALUE_CALCULATION_INTERVAL=3600
RECOMMENDATION_GENERATION_SCHEDULE=0 */6 * * *

# Security Settings
BI_API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
PROFILE_DATA_ENCRYPTION_KEY=your-encryption-key-change-in-production
